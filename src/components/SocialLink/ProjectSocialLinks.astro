---
import Image from "astro/components/Image.astro";
import demoImage from "../../images/demo.svg";
import githubImage from "../../images/github.svg";
import SocialLink from "./SocialLink.astro";

interface Props {
  title: string;
  blogUrl?: string;
  demoUrl?: string;
  repoUrl?: string;
}

const { demoUrl, repoUrl, blogUrl, title } = Astro.props;
---

<div class="flex flex-row gap-2 mt-2 flex-wrap justify-center">
  {
    demoUrl && (
      <SocialLink title="Demo" url={demoUrl}>
        <Image
          src={demoImage}
          slot="icon"
          class="w-8"
          alt={`Demo link for project ${title}`}
        />
      </SocialLink>
    )
  }
  {
    repoUrl && (
      <SocialLink title="Github" url={repoUrl}>
        <Image
          src={githubImage}
          slot="icon"
          class="w-8"
          alt={`Repo link for project ${title}`}
        />
      </SocialLink>
    )
  }
  {
    blogUrl && (
      <SocialLink title="Blog" url={blogUrl}>
        <Image
          src={demoImage}
          slot="icon"
          class="w-8"
          alt={`Blog link for project ${title}`}
        />
      </SocialLink>
    )
  }
</div>
